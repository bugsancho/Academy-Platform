
@model AcademyPlatform.Web.Models.Courses.CourseViewModel

@{
    ViewBag.PageTitle = "Обнови курс";
}

<h2>@ViewBag.PageTitle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.EditorForModel("GenericEditorTemplate")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Обнови" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
