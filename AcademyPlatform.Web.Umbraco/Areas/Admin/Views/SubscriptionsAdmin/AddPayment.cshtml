@model AcademyPlatform.Web.Models.Payments.PaymentEditViewModel

@{
    ViewBag.PageTitle = "Въведи плащане";
}

<h2>@ViewBag.PageTitle</h2>


@using (Html.BeginForm("AddPayment", "SubscriptionsAdmin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.EditorForModel("GenericEditorTemplate")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Създай" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно", "Index")
</div>
