@using ClientDependency.Core.Mvc
@{
    Layout = null;


    Html.RequiresCss("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css");
    Html.RequiresCss("~/Content/project-theme.css");
    Html.RequiresCss("~/Content/animate.css");
    Html.RequiresCss("~/Content/animations.css");
    Html.RequiresCss("~/Content/site.css");
    Html.RequiresCss("~/Content/project-theme.css");
    Html.RequiresCss("~/Content/ProjectThemeSkins/light_blue.css");
    Html.RequiresCss("~/Content/Fonts/font-awesome.css");
    Html.RequiresCss("~/Content/hover.css");
    Html.RequiresCss("~/Content/rs-slider.css");
    Html.RequiresCss("~/Content/jasny-bootstrap.css");
    Html.RequiresCss("~/Content/animate.css");

    Html.RequiresJs("https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js", 0);
    Html.RequiresJs("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js");
    Html.RequiresJs("https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js");

    Html.RequiresJs("~/Scripts/jquery.validate.min.js");
    Html.RequiresJs("~/Scripts/jquery.validate.unobtrusive.min.js");
    Html.RequiresJs("~/Scripts/respond.js");
    Html.RequiresJs("~/Scripts/Plugins/SmoothScroll.js");
    Html.RequiresJs("~/Scripts/Plugins/jquery.themepunch.revolution.js");
    Html.RequiresJs("~/Scripts/Plugins/jquery.themepunch.tools.min.js");
    Html.RequiresJs("~/Scripts/Plugins/jquery.waypoints.js");
    Html.RequiresJs("~/Scripts/Plugins/jquery.browser.js");
    Html.RequiresJs("~/Scripts/template.js");
    Html.RequiresJs("~/Scripts/custom.js");
    Html.RequiresJs("~/Scripts/Plugins/isotope.pkgd.js");
    Html.RequiresJs("~/Scripts/Plugins/isotope.pkgd.min.js");
    Html.RequiresJs("~/Scripts/Plugins/jquery.vide.js");

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Администрация - Фокус Академия</title>
    <link href="/Content/Gridmvc.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="@Url.Content("~/Images/favicon.png")">
    @Html.RenderCssHere()
    @RenderSection("head", false)
</head>
<body>
    <div class="scrollToTop circle"><i class="fa fa-angle-up"></i></div>
    <div class="header-container">
        <header class="header fixed clearfix">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <!-- header-left start -->
                        <!-- ================ -->
                        <div class="header-left clearfix">
                            <!-- logo -->
                            <div id="logo" class="logo">
                                <a href="/"><img src="@Url.Content("~/Images/logo-focus.png")" alt="Академията"></a>
                            </div>
                            <!-- name-and-slogan -->
                            <div class="site-slogan">
                                Администрация
                            </div>

                        </div>
                        <!-- header-left end -->
                    </div>
                    <div class="col-md-9">

                        <!-- header-right start -->
                        <!-- ================ -->
                        <div class="header-right clearfix">

                            <!-- main-navigation start -->
                            <!-- classes: -->
                            <!-- "onclick": Makes the dropdowns open on click, this the default bootstrap behavior e.g. class="main-navigation onclick" -->
                            <!-- "animated": Enables animations on dropdowns opening e.g. class="main-navigation animated" -->
                            <!-- "with-dropdown-buttons": Mandatory class that adds extra space, to the main navigation, for the search and cart dropdowns -->
                            <!-- ================ -->
                            <div class="main-navigation  animated">
                                <!-- navbar start -->
                                <!-- ================ -->
                                <nav class="navbar navbar-default" role="navigation">
                                    <div class="container-fluid">
                                        <!-- Toggle get grouped for better mobile display -->
                                        <div class="navbar-header">
                                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                                                <span class="sr-only">Toggle navigation</span>
                                                <span class="icon-bar"></span>
                                                <span class="icon-bar"></span>
                                                <span class="icon-bar"></span>
                                            </button>
                                        </div>
                                        <!-- Collect the nav links, forms, and other content for toggling -->
                                        <div class="collapse navbar-collapse" id="navbar-collapse-1">
                                            <!-- main-menu -->
                                            <ul class="nav navbar-nav ">

                                                <li>
                                                    @Html.ActionLink("Курсове", "Index", "CoursesAdmin")
                                                </li>
                                                <li>
                                                    @Html.ActionLink("Категории", "Index", "Categories")
                                                </li>
                                            </ul>
                                        </div>
                                        <!-- header dropdown buttons end-->
                                    </div>
                                </nav>
                            </div>
                            <!-- navbar end -->
                        </div>
                        <!-- main-navigation end -->
                    </div>
                    <!-- header-right end -->
                </div>
            </div>
        </header>

    </div>
    @RenderSection("PreContent", required: false)
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>
    <footer id="footer" class="clearfix dark">
        <div class="footer">
            <div class="container">
                <div class="footer-inner">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="footer-content text-center padding-ver-clear">
                                <p class="text-center margin-clear">Copyright © 2015 Academy Platform by <a target="_blank" href="https://github.com/bugsancho">Alexander Todorov</a>. All Rights Reserved</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="/Scripts/gridmvc.min.js" type="text/javascript"> </script>
    @Html.RenderJsHere()
    @RenderSection("scripts", required: false)
</body>
</html>
