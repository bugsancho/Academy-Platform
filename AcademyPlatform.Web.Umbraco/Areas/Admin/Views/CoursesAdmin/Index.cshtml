@using GridMvc.Html
@model IEnumerable<AcademyPlatform.Models.Courses.Course>
@{
    ViewBag.PageTitle = "Курсове";
}

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Id);
    columns.Add(x => x.Title);
    columns.Add(x => x.StartDate).Titled("Начална дата").Format("{0:dd/MM/yyyy}");
    columns.Add(x => x.EndDate).Titled("Крайна дата").Format("{0:dd/MM/yyyy}");
    columns.Add().RenderValueAs(x => Html.ActionLink("Редактирай", "Edit", "CoursesAdmin", new { Area = "Admin", id = x.Id },  new { @class = "btn btn-info"})).Encoded(false).Sanitized(false);
    columns.Add().RenderValueAs(x => Html.ActionLink("Изтрий", "Delete", "CoursesAdmin", new { Area = "Admin", id = x.Id }, new { @class = "btn btn-danger"})).Encoded(false).Sanitized(false);
}

).Sortable(true).WithPaging(5).Filterable(true)

