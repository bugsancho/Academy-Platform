@inherits Umbraco.Web.Mvc.UmbracoViewPage<AcademyPlatform.Web.Models.Assessments.AssessmentViewModel>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.Hidden("Assessment.AssessmentRequestId", Model.AssessmentRequestId)
        var questionIndex = 0;
        foreach (var question in Model.Questions)
        {
            var answerIndex = 0;
            @Html.Hidden("Assessment.Questions[" + questionIndex + "].Id", question.Id)
            <div class="row">
                <div class="col-md-9">
                    <div class="pv-30 ph-20 feature-box bordered shadow text-justify object-non-visible animated object-visible fadeInDownSmall" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
                        <h3>@Html.Raw(question.QuestionText)</h3>
                        <div class="separator clearfix"></div>
                        @foreach (var answer in question.Answers)
                        {
                            <div>
                                @Html.Hidden("Assessment.Questions[" + questionIndex + "].Answers[" + answerIndex + "].Index", answer.Index)
                                @Html.CheckBox("Assessment.Questions[" + questionIndex + "].Answers[" + answerIndex + "].IsCorrect", false)
                                @Html.Label("Assessment.Questions[" + questionIndex + "].Answers[" + answerIndex + "].IsCorrect", answer.Text)

                            </div>
                            answerIndex++;
                        }


                    </div>
                </div>
            </div>
            questionIndex++;
        }

        <input type="submit" name="form" />
    }
</div>