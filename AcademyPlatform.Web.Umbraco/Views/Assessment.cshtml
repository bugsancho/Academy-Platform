@using AcademyPlatform.Models.Assessments
@inherits Umbraco.Web.Mvc.UmbracoViewPage<AcademyPlatform.Web.Models.Assessments.AssessmentViewModel>
<div class="container gray-bg">
    <div class="row">
        <div class="col-md-12">
            <div class="pv-30 ph-20 exam-box feature-box bordered text-justify object-non-visible animated object-visible fadeInDownSmall" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
                <span class="icon default-bg small"><i class="fa fa-info"></i></span>
                @*@Html.Raw(Model.IntroText)*@
                @* THAT HARDCODE *@
                <h4 style="display: block"><strong>ИЗПИТ за обучение на тема: „Новият ISO 9001:2015 – запознаване с изискванията, промените и правилата за преход“</strong></h4>
                <p>Изпитът се състои от 20 въпроса, избирани на случаен принцип от база данни с въпроси по материала, обхванат в обучението.</p>
                <p>За да издържите успешно изпита е необходимо, да постигнете най-малко 80% верни отговори на изпита (т.е. да отговорите вярно на най-малко 16 от 20-те въпроса, включени в изпита).</p>
                <p>Въпросите са от затворен тип като всеки въпрос има само един верен отговор, който трябва да посочите.</p>
                <p>Няма ограничение във времето за полагане на изпита, както и няма ограничение в броя опити. Сертификатът Ви ще бъде автоматично генериран, при успешно преминаване на изпита.</p>
            </div>
        </div>
        @using (Html.BeginForm())
            {
            @Html.Hidden("Assessment.AssessmentRequestId", Model.AssessmentRequestId)
            var questionIndex = 0;
            var questionNumber = 1;
            foreach (var question in Model.Questions)
            {
                var answerIndex = 0;
                @Html.Hidden("Assessment.Questions[" + questionIndex + "].Id", question.Id)
                <div class="col-md-12">
                    <div class="pv-30 ph-20 exam-box feature-box bordered text-justify object-non-visible animated object-visible fadeInDownSmall" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
                        <span class="icon default-bg small">@questionNumber</span>
                        @Html.Raw(question.QuestionText)
                        <div class="row">
                            <div class="col-md-12">
                                <div class="separator clearfix"></div>
                                @foreach (var answer in question.Answers)
                                {
                                    <div>
                                        @Html.Hidden("Assessment.Questions[" + questionIndex + "].Answers[" + answerIndex + "].Index", answer.Index)
                                        @Html.CheckBox("Assessment.Questions[" + questionIndex + "].Answers[" + answerIndex + "].IsCorrect", false)
                                        @Html.Label("Assessment.Questions[" + questionIndex + "].Answers[" + answerIndex + "].IsCorrect", answer.Text)

                                    </div>
                                    answerIndex++;
                                }
                            </div>
                        </div>
                    </div>
                </div>
                questionNumber++;
                questionIndex++;
            }
            <div class="col-md-12">
                <input type="submit" name="form" class="submit-button btn btn-default" value="Изпращане на изпита" />
            </div>
        }
    </div>
</div>
