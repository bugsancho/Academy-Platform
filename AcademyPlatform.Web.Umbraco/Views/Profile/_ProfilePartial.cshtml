@model AcademyPlatform.Web.Models.Account.ChangePasswordViewModel

@using (Ajax.BeginForm("PostChangePassword", "Profile", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    LoadingElementId = "change-password-loader",
    UpdateTargetId = "change-password-placeholder",
    OnBegin = "$('#change-password-button').hide()"
}, new { id = "change-password-form" }))
{
    if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="row">
            <div class="col-md-4">
                <div class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    @Model.SuccessMessage
                </div>
            </div>
        </div>
    }
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true)
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                    <span>*</span>
                </div>
                <div class="col-md-9">
                    @Html.ValidationMessageFor(m => m.OldPassword)
                    @Html.EditorFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Стара парола" } })
                </div>
            </div>

            <div class="form-group row">

                <div class="col-md-3">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                    <span>*</span>
                </div>
                <div class="col-md-9">
                    @Html.ValidationMessageFor(m => m.NewPassword)
                    @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Нова парола" } })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    <span>*</span>
                </div>
                <div class="col-md-9">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Потвърждение на парола" } })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10">
                    <div id="change-password-loader" style="display: none" class="margin-vertical-10">
                        Запазване на промените ...
                    </div>
                    <button id="change-password-button" class="btn btn-default">Промени Паролата</button>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    initalizeUnobtrusiveValidation("#change-password-form");
</script>


