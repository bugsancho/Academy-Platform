@inherits UmbracoViewPage<AcademyPlatform.Web.Models.Courses.CourseDetailsViewModel>
@{
    int moduleIndex = 1;
}
<section class="main-container padding-ver-clear">
    <div class="container pv-40">
        <div class="row">

            <div class="col-md-12">
                <div class="course-img-container" style="background: linear-gradient(rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35)), url(@Model.ImageUrl) center center; background-size: 100%; background-repeat: no-repeat">
                    <div class="inner">
                        <h1>@Model.Title</h1>
                        <br />
                        @Html.Raw(Model.ShortDescription)
                        <br />
                        @if (ViewBag.StudentPageUrl != null)
                        {
                        }
                        else
                        {
                            <a href="@Model.JoinCourseUrl" class="btn btn-animated btn-course-unsigned-transparent btn-lg">Запиши се <i class="fa fa-sign-in"></i></a>
                        }

                    </div>
                </div>
            </div>
            <!-- main start -->
            <!-- ================ -->
            <div class="main col-md-9">


                <ul class="nav nav-tabs style-1 space-top" role="tablist">
                    <li class="active"><a href="#htab1" role="tab" data-toggle="tab"><i class="fa fa-book pr-10"></i>Модули и лекции</a></li>
                    <li><a href="#htab2" role="tab" data-toggle="tab"><i class="fa fa-list pr-10"></i>Описание</a></li>
                    <li><a href="#htab3" role="tab" data-toggle="tab"><i class="fa fa-certificate pr-10"></i>Сертификат</a></li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="htab1">
                        <h3>Модули и лекции</h3>
                        <div class="row">
                            <div>
                                @foreach (var module in Model.Modules)
                                {
                                    <div class="pv-20 ph-20 feature-box-2 boxed white-bg">
                                        <span class="icon default-bg small">@moduleIndex</span>
                                        <div class="body">
                                            <h4 class="title">@module.Name</h4>

                                            <div class="col-md-1">
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <tbody>
                                                                @{
                                                                    var lectureIndex = 1;
                                                                }
                                                                @foreach (var lecture in module.LectureLinks)
                                                                {
                                                                    <tr>
                                                                        <td class="text-left">@(moduleIndex).@lectureIndex <a href="@lecture.Url">@lecture.Name</a></td>
                                                                        <td class="text-right">
                                                                            @if (lecture.IsVisited)
                                                                            {
                                                                                <i class="fa fa-check"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                <a href="@lecture.Url"><i class="fa fa-play"></i> Старт</a>
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                    lectureIndex++;
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                                        moduleIndex++;
                                                                    }
                            </div>
                            <div>

                                <div class="pv-20 ph-20 feature-box-2 boxed white-bg">
                                    <span class="icon default-bg small">1</span>
                                    <div class="body">
                                        <h4 class="title">Active Demo Module</h4>

                                        <div class="col-md-1">
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <tbody>

                                                            <tr>
                                                                <td class="text-left">1.1 <a href="/student-page/web-design/html-stuff/html-5">HTML 5</a></td>
                                                                <td class="text-right">
                                                                    <span class="text-default">Демо Лекция</span>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-left">1.2 <a href="/student-page/web-design/html-stuff/random-lecture">Random Lecture</a></td>
                                                                <td class="text-right">
                                                                    <span class="text-default">Демо Лекция</span>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-left">1.3 <a href="/student-page/web-design/html-stuff/more-lectures">More Lectures</a></td>
                                                                <td class="text-right">
                                                                    <span class="text-default"></span><i class="fa fa-play"></i> Демо Лекция
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="pv-20 ph-20 feature-box-2 boxed white-bg">
                                    <span class="icon small inactive-demo-bg">2</span>
                                    <div class="body">
                                        <h4 class="title inactive-demo">inactive Demo Module </h4>

                                        <div class="col-md-1">
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <tbody>

                                                            <tr>
                                                                <td class="text-left">2.1 Another lecture</td>
                                                                <td class="text-right">
                                                                    <span data-toggle="tooltip" title="Заключен, палти си лек!"><i class="fa fa-lock"></i> Старт</span>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="htab2">
                        <h3>Описание</h3>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.Raw(Model.DetailedDescription)
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="htab3">
                        <h3>Well Documented</h3>
                        <div class="row">
                        </div>
                        <a href="page-services.html" class="btn margin-clear btn-default">Read more</a>
                    </div>
                </div>
                <!-- tabs end -->
            </div>
            <!-- main end -->
            <!-- sidebar start -->
            <!-- ================ -->
            <aside class="col-md-3 col-lg-3 space-top">
                <div class="sidebar">
                    <div class="block clearfix">
                        <h3 class="title">Информация за курса</h3>
                        <div class="separator-2"></div>
                        <ul class="list margin-clear">

                            <li><strong>Продължителност: </strong> <span class="text-left"> 30 учебни часа</span></li>
                            <li><strong>Собственик на обучението: </strong> <span class="text-left"> <a href="/partners/training-partner-icl/">"Интернешънал Сертификейшънс България" ЕООД</a></span></li>
                            <li><strong>Видео: </strong> <span class="text-left"> Да</span></li>
                            <li><strong>Аудио: </strong> <span class="text-left"> Да</span></li>
                            <li><strong>Сертификат: </strong> <span class="text-left"> Да, при 80% верни отговорина изпитта</span></li>
                            <li><strong>Вид на курса: </strong> <span class="text-left"> Платен</span></li>
                            <li><strong>Цена: </strong> <span class="text-left"> 100 лв. без ДДС</span></li>
                            @*<li><strong>Лектор: </strong> <span class="text-left">@Model.LecturerName </span></li>*@
                            <li><strong>Категория: </strong> <span class="text-left">@Model.Category.Title </span></li>
                        </ul>
                    </div>
                </div>
            </aside>
            <!-- sidebar end -->
        </div>
    </div>
</section>
<div class="footer-top animated-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="call-to-action text-center">
                    <div class="row">
                        <div class="col-sm-8">
                            <h2>Обратно към обученията</h2>
                            <h2>Изберете си обучение!</h2>
                        </div>
                        <div class="col-sm-4">
                            <p class="mt-10">
                                <a href="@Model.CoursesPageUrl" title="Courses" class="btn btn-animated btn-lg btn-orange" data-id="2074">ВСИЧКИ ОБУЧЕНИЯ <i class="fa fa-book"></i></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>